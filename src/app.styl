#app-window
    position absolute
    top 0px
    left 0px
    // width 400px
    // height 800px
    width 100%
    height 100%
    overflow hidden
    background-color white


.scrollable
    width 100%
    height 100%
    overflow auto
    -webkit-overflow-scrolling touch


.full
    width 100%
    height 100%
    overflow hidden


.col-box
    width 100%
    height 100%
    overflow hidden
    display flex
    flex-flow column


.col-box-fixed
    width 100%
    flex 0 1 auto
    overflow hidden


.col-box-stretch
    width 100%
    flex 1 1 auto
    overflow hidden
    position relative


.top-page
.page
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    background-color white


.page
    transform translate3d(0, 0, 10px)

.top-page
    transform translate3d(0, 0, 0)


.aspect-2x1
    width 100%
    padding-bottom 50%
    position relative


.aspect-1x1
    width 100%
    padding-bottom 100%
    position relative


.with-aspect
    position absolute
    top 0
    left 0
    right 0
    bottom 0
